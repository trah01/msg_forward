# ESPHome Secrets 配置模板
# 复制此文件为 secrets.yaml 并填入真实值

# WiFi 配置
wifi_ssid: "你的WiFi名称"
wifi_password: "你的WiFi密码"
# wifi_ssid_2: "备用WiFi"
# wifi_password_2: "备用WiFi密码"

# AP 模式密码 (设备无法连接 WiFi 时的热点密码)
ap_password: "smsforwarder"

# API 加密密钥 (用于 Home Assistant 集成)
# 可以使用命令生成: python3 -c "import secrets; print(secrets.token_hex(32))"
api_encryption_key: "这里填入32字节的base64密钥"

# OTA 更新密码
ota_password: "smsforwarder_ota"

# Web 界面认证
web_username: "admin"
web_password: "admin123"

# MQTT 配置 (可选)
mqtt_broker: "192.168.1.100"
mqtt_port: 1883
mqtt_username: "mqtt_user"
mqtt_password: "mqtt_password"
